-- Relations
eqReflexive :: Integer -> Boolean .
eqReflexive x =*= x == x .

eqFalsifiable :: Integer -> Integer -> Boolean .
eqFalsifiable x y =*= x == y .

gtFalsifiable :: Integer -> Integer -> Boolean .
gtFalsifiable x y =*= x > y .

ltFalsifiable x y =*= x < y .

-- Operations
plusOneGt :: Integer -> Boolean .
plusOneGt x =*= (x + 1) > x .

minusOneLt :: Integer -> Boolean .
minusOneLt x =*= (x - 1) < x .
