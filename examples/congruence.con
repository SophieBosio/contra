-- Helper function
and :: Boolean -> Boolean -> Boolean .
and True True = True .
and x    y    = False .

-- Variations on addition
additionIsCongruent :: Integer -> Integer -> Integer -> Integer -> Boolean .
additionIsCongruent x y xx yy =*=
  if (x == xx)
     then if (y == yy)
             then (x + y) == (xx + yy)
             else True
     else True .

plus :: Integer -> Integer -> Integer .
plus x y = x + y .

