-- Variations on incrementing
plusOneIsCongruent :: Integer -> Integer -> Boolean .
plusOneIsCongruent x y =*=
  if (x == y)
     then (x + 1) == (y + 1)
     else True .

inc :: Integer -> Integer .
inc x = x + 1 .

incIsCongruent :: Integer -> Integer -> Boolean .
incIsCongruent x y =*=
  if (x == y)
     then (inc x) == (inc y)
     else True .

